{
  "manifest_version": 3,
  "name": "PaySlip Plus",
  "description": "Extensão para baixar contracheques com agrupamento automático de PDF.",
  "version": "3.0.1",
  "author": "David Vasconcellos",
  "icons": {
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://rhbahia.ba.gov.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}