{
  "manifest_version": 3,
  "name": "PaySlip Plus",
  "description": "Extensão para baixar contracheques com agrupamento automático de PDF.",
  "version": "2.0.20",
  "author": "David Vasconcellos",
  "icons": {
    "128": "icon1.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://rhbahia.ba.gov.br/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
